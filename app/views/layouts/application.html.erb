<!DOCTYPE html>
<html>
  <head>
    <title>Instalium</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if @current_user %>
        <%= link_to(@current_user.username, "/users/#{@current_user.id}") %>
        <%= link_to("logout", logout_path, {method: :post}) %>
        <% if @current_user.image_path %>
        <img src="<%= @current_user.image_path %>" class="user-icon">
        <% else %>
        <%= image_tag 'default.png', class: 'user-icon' %>
        <% end %>
      <% else %>
        ログインしていません
        <%= link_to("SignUp", new_user_path) %> /
        <%= link_to("Login", login_form_path) %>
      <% end %>
    </header>

    <% if flash[:notice] %>
      <div class="flash-notice">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
